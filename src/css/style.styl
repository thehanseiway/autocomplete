* {
  box-sizing: border-box;
}
body {
    margin: 0;
    padding: 0;
    font-family: Arial;
    color: #333;
    line-height: 1.3;
    font-size: 18px;
}

ul {
  padding: 0;
  list-style: none;
}

h1,h2,h3,h4,h5 {
    margin-top: 0;
}

.isHovered {
    background-color: lightblue;
}

.autocompleteContainer {
  max-width: 300px;
  margin: 20px auto;

  label {
    color: #888;
  }
}

.autocomplete {
  margin: 5px auto;
  border-radius: 10px;
  position: relative;

  input {
    width: 100%;
    border: 1px solid #DADADA;
    color: #888;
    height: 35px;
    margin-bottom: 16px;
    margin-right: 6px;
    margin-top: 2px;
    outline: 0 none;
    padding: 3px 3px 3px 5px;
    font-size: 16px;
    line-height:15px;
    box-shadow: inset 0px 1px 4px #ECECEC;
  }
}

.autocompleteItemList {
  width: 100%;
  border: 1px solid #dadada;
  color: #888;
  margin-bottom: 16px;
  margin-right: 6px;
  margin-top: 2px;
  outline: 0 none;
  padding: 0;
  position: absolute;
  top: 75%;
  font-size: 16px;
  background-color: #fff;
  line-height: 15px;
  border-radius: 5px;

  .autocompleteItem {
    padding: 10px;
    cursor: pointer;
  }
}
